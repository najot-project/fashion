<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8">
  <title>Buyurtmalar</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body class="bg-light">

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">

        <div class="card shadow-sm rounded-4">
          <div class="card-body">

            <h2 class="mb-4 text-center text-primary">ðŸ“‹ Foydalanuvchi Buyurtmalari</h2>

            <% if (orders.length === 0) { %>
              <p class="text-muted text-center">Hech qanday buyurtma topilmadi.</p>
            <% } else { %>
              <ul class="list-group mb-4">
                <% orders.forEach(order => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/orders/<%= order._id %>" class="text-decoration-none">
                      ðŸ§¾ Buyurtma ID: <strong><%= order._id %></strong>
                    </a>
                    <span class="badge bg-primary rounded-pill">
                      Mahsulotlar: <%= order.items.length %>
                    </span>
                  </li>
                <% }) %>
              </ul>
            <% } %>

            <div class="text-center">
              <a href="/orders/create" class="btn btn-success">
                âž• Yangi buyurtma yaratish
              </a>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>
