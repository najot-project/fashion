<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ZARA — Cart</title>

  <!-- Link to Google Fonts for Montserrat -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: white;
      font-family: 'Times New Roman', Times, serif;
    }
    .logo {
      font-size: 7rem;
      font-weight:600;
      letter-spacing: 0px;
      font-family: 'Times New Roman', Times, serif
    }
    .product-card {
      text-align: center;
      padding: 15px;
    }
    .product-card img {
      width: 100%;
      height: auto;
    }
    .product-card button {
      border: none;
      background-color: transparent;
      font-size: 1.5rem;
      color: black;
      cursor: pointer;
    }
    .suggestions-title {
      font-size: 1.2rem;
      margin-top: 30px;
      margin-bottom: 20px;
      text-align: left;
    }
  </style>
</head>
<body>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div class="logo">ZARA</div> <!-- The logo text will use Montserrat font -->
      <div class="d-flex gap-3">
        <input type="text" class="form-control form-control-sm" placeholder="ПОИСК">
        <a href="#" class="text-decoration-none text-dark">ЧАТ</a>
      </div>
    </div>

    <h5 class="suggestions-title">ВАМ ТАКЖЕ МОЖЕТ ПОНРАВИТЬСЯ</h5>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
      <% const items = [
        { img: "/images/red-dress.jpg", name: "ПЛАТЬЕ МИДИ В БЕЛЬЕ...", price: "599 900 UZS" },
        { img: "/images/white-tshirt.jpg", name: "БАЗОВАЯ ФУТБОЛКА SLIM...", price: "199 900 UZS" },
        { img: "/images/blue-dress.jpg", name: "ПЛАТЬЕ-РУБАШКА В ПОЛ...", price: "929 900 UZS" },
        { img: "/images/black-pants.jpg", name: "БРЮКИ WIDE LEG С ДВО...", price: "599 900 UZS" },
        { img: "/images/black-sweater.jpg", name: "БАЗОВАЯ ТОЛСТОВКА С...", price: "559 900 UZS" }
      ]; %>

      <% items.forEach(item => { %>
        <div class="col">
          <div class="product-card">
            <img src="<%= item.img %>" alt="Product">
            <p class="mt-2 mb-1"><%= item.name %></p>
            <p class="mb-2"><%= item.price %></p>
            <button>+</button>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
